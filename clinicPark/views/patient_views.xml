<odoo>
    <record id="clinica_paciente_form_view" model="ir.ui.view">
        <field name="name">clinica.paciente.form</field>
        <field name="model">clinica.paciente</field>
        <field name="arch" type="xml">
            <form string="Paciente">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="dni"/>
                        <field name="fecha_nacimiento"/>
                        <field name="genero"/>
                        <field name="telefono"/>
                        <field name="direccion"/>
                        <field name="acompanante"/>
                        <field name="motivo_ingreso"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="clinica_paciente_tree_view" model="ir.ui.view">
        <field name="name">clinica.paciente.tree</field>
        <field name="model">clinica.paciente</field>
        <field name="arch" type="xml">
            <tree string="Pacientes">
                <field name="name"/>
                <field name="dni"/>
                <field name="genero"/>
                <field name="telefono"/>
            </tree>
        </field>
    </record>

    <record id="clinica_paciente_action" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="res_model">clinica.paciente</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
