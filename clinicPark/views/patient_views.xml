<odoo>
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">clinic.patient.form</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <form string="Paciente">
                <group>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="motivo_ingreso"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">clinic.patient.tree</field>
        <field name="model">clinic.patient</field>
        <field name="arch" type="xml">
            <tree string="Pacientes">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="action_clinic_patient" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="res_model">clinic.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="clinic_menu_root" name="ClÃ­nica"/>
    <menuitem id="clinic_menu_patient" name="Pacientes" parent="clinic_menu_root" action="action_clinic_patient"/>
</odoo>
