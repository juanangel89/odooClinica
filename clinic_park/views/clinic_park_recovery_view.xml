<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_clinic_park_recovery_tree" model="ir.ui.view">
        <field name="name">clinic.park.recovery.tree</field>
        <field name="model">clinic.park.recovery</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="view_clinic_park_recovery_form" model="ir.ui.view">
        <field name="name">clinic.park.recovery.form</field>
        <field name="model">clinic.park.recovery</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="date"/>
                        <field name="shift_notes"/>
                        <field name="nurse_evolution"/>
                        <field name="alerts"/>
                        <field name="tasks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>