<odoo>
    <!-- Vista Tree -->
    <record id="view_clinic_park_patient_tree" model="ir.ui.view">
        <field name="name">clinic.park.patient.tree</field>
        <field name="model">clinic.park.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="dni"/>
                <field name="phone"/>
                <field name="stage"/>
            </tree>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_clinic_park_patient_kanban" model="ir.ui.view">
        <field name="name">clinic.park.patient.kanban</field>
        <field name="model">clinic.park.patient</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage">
                <field name="name"/>
                <field name="stage"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong><field name="name"/></strong>
                            <div>Cédula: <field name="dni"/></div>
                            <div>Tel: <field name="phone"/></div>
                            <div>Motivo: <field name="reason"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Vista Formulario -->
    <record id="view_clinic_park_patient_form" model="ir.ui.view">
        <field name="name">clinic.park.patient.form</field>
        <field name="model">clinic.park.patient</field>
        <field name="arch" type="xml">
            <form string="Paciente">
                <group>
                    <field name="name"/>
                    <field name="age"/>
                    <field name="dni"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="address"/>
                    <field name="birth_date"/>
                    <field name="reason"/>
                </group>
                <group string="Acompañante">
                    <field name="companion"/>
                    <field name="companion_phone"/>
                </group>
                <field name="stage"/>
            </form>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_clinic_park_patient" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="res_model">clinic.park.patient</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>
</odoo>
